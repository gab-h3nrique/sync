{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "jsx": "react-jsx",
    "lib": ["DOM", "ESNext"],
    "allowJs": true,
    "strict": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "include": ["src/**/*", "src/database"],
  "exclude": ["node_modules", "dist"]
}